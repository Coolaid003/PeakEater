{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug PeakEater Standalone",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "args": [],
            "stopAtEntry": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "program": "${workspaceFolder}/build/PeakEater_artefacts/${config:peakeater.config}/Standalone/PeakEater.app/Contents/MacOS/PeakEater"
        }
    ]
}